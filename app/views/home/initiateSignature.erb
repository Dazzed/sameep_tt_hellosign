<script type="text/javascript" src="https://s3.amazonaws.com/cdn.hellosign.com/public/js/hellosign-embedded.LATEST.min.js"></script>
<script type="text/javascript">
  HelloSign.init("<%= ENV["HELLO_SIGN_CLIENT_ID"] %>");
  HelloSign.open({
      url: "<%= @signed_url.raw_data["sign_url"] %>",
      allowCancel: true,
      messageListener: function(eventData) {
          if (eventData.event == HelloSign.EVENT_SIGNED) {
            // document.location = "/view_stripe";
            console.log(10, 'sign success!', <%= @should_pay %>);
            var should_pay = <%= @should_pay %>;
            console.log(12, should_pay);
            if (should_pay) {
              document.location = "/view_stripe";
            } else {
              document.location = "/thank_you";
            }
          }
      }
  });
</script>
