<div class="w-100 p-5">
  <h4>Template Status:</h4>
  <% if @thisDeal["stats"] %>
    <% @thisDeal["stats"]["parties"].each do |thisParty| %>
      <div class="card" style="width: 40rem;">
        <div class="card-body">
          <h5 class="card-title"><%= thisParty["email"] %></h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <% if thisParty["is_pending_signature"] %>
              <span class="red">Pending Signature</span>
            <% else %>
              <span class="green">Signed at <%= thisParty["signed_at"] %></span>
            <% end %>
          </h6>
          <a href="javascript:void(0)" class="card-link">View Signed Document</a>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>You have not sent any emails for this template</p>
  <% end %>
</div>